{{>head}}
  <body data-spy="scroll" data-target="#toc">


  <!-- header -->
  {{>homenav}}
  <!-- / header -->


    <!-- hero -->
    <section class="hero bg-blue">
      <div class="container">
        {{>breadcrumb}}
      </div>
    </section>
    <!-- / hero -->

    <!-- sidebar layout -->
    <section class="overlay">
      <div class="container overlay-item-top">
        <div class="row">
          <div class="col">
            <div class="content boxed">
              <div class="row separated">

                <aside class="col-md-3 content-aside bg-light">
                  <div class="widget">
                    <h3 class="widget-title">Filter</h3>
                    <div class="form-group">
                      <label for="season">Season</label>
                      <select class="form-control form-control-sm" id="season">
                        <option value="">All</option>
                        {{#seasons}}<option>{{.}}</option>{{/seasons}}

                      </select>
                    </div>
                    <div class="form-group">
                      <label for="competition">Competition</label>
                      <select class="form-control form-control-sm" id="competition">
                        <option value="">All</option>
                        <option value="League">League</option>
                        {{#competitions}}<option>{{name}}</option>{{/competitions}}
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="opposition">Opposition</label>
                      <select class="form-control form-control-sm" id="opposition">
                        <option value="">All</option>
                        {{#teams}}<option>{{name}}</option>{{/teams}}

                      </select>
                    </div>
                    <div class="form-group">
                      <label for="manager">Manager</label>
                      <select class="form-control form-control-sm" id="manager">
                        <option value="">All</option>
                        {{#managers}}<option value="{{dateJoined}},{{dateLeft}}">{{name}}</option>{{/managers}}
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="venue">Venue</label>
                      <select class="form-control form-control-sm" id="venue">
                        <option value="">All</option>
                        <option>Prenton Park</option>
                        <option>Wembley Stadium</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="pens">Penalties</label>
                      <select class="form-control form-control-sm" id="pens">
                        <option value="">No</option>
                        <option>Penalty Shootout</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="sort">Sort</label>
                      <select class="form-control form-control-sm" id="sort">
                        <option>Date</option>
                        <option>Top Attendance</option>
                      </select>
                    </div>
                    <button type="button" class="btn btn-sm btn-primary btn-rounded btn-results-search">Search</button>
                  </div>

                </aside>
                <article class="col-md-9 content-body tranmere-results">
                  <div id="loading">
                    <div class="spinner-grow text-primary" role="status">
                      <span class="sr-only">Loading...</span>
                    </div>
                  </div>
                  <div id="results-search">
                  {{#results.length }}
                    {{>results}}
                  {{/results.length }}
                  </div>

                </article>


              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- / sidebar layout -->

    {{#season}}
    <meta name="season-ssr-id" content="{{season}}">
    {{/season}}
    {{#venue}}
    <meta name="venue-ssr-id" content="{{venue}}">
    {{/venue}}
    {{#pens}}
    <meta name="pens-ssr-id" content="{{pens}}">
    {{/pens}}
    {{#opposition}}
    <meta name="opposition-ssr-id" content="{{opposition}}">
    {{/opposition}}
    {{#sort}}
    <meta name="sort-ssr-id" content="{{sort}}">
    {{/sort}}
    {{>footer}}
  </body>
</html>